{% extends "PWQCMBundle::layout.html.twig" %}

{% block title %}
	Accueil - {{ parent() }}
{% endblock %}

{% block title2 %}Gestion des Concours{% endblock %}

{% block menu %}

	<ul class="nav nav-pills nav-stacked">
		<li><a href="{{ path('pw_concours_add')}}">Creer un Concours</a></li>
		{#<li><a href="{{ path('pw_qcm_homepage')}}">Afficher les Concours</a></li>#}	
	</ul>

{% endblock %}

{% block body %}
	<h3>Tous les QCM</h3>
	<ul>
	{% for concours in listConcours %}
		<li>
			<a href="{{ path('pw_concours_view', {'id': concours.id}) }}">
				{{ concours.nom }}
			</a>
			le {{ concours.date|date('d/m/Y') }}
		</li>
	{% else %}
		<li>Pas encore de concours</li>
	{% endfor %}
	</ul>
	
{% endblock %}