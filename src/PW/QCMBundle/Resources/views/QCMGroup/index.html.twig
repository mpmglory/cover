{% extends "PWQCMBundle::layout.html.twig" %}

{% block title %}
	Accueil - {{ parent() }}
{% endblock %}

{% block title2 %}Gestion des Groupes de QCM{% endblock %}

{% block menu %}

	<ul class="nav nav-pills nav-stacked">
		<li><a href="{{ path('pw_qcmgroup_add')}}">Creer un Groupe-QCM</a></li>
		{#<li><a href="{{ path('pw_qcm_homepage')}}">Afficher les Concours</a></li>#}	
	</ul>

{% endblock %}

{% block body %}
	<h3>Tous les Groupes-QCM</h3>
	<ul>
	{% for qcmgroup in listQcmgroup %}
		<li>
			<a href="{{ path('pw_qcmgroup_view', {'id': qcmgroup.id}) }}">
				{{ qcmgroup.titre }}
			</a>
			le {{ qcmgroup.date|date('d/m/Y') }}
		</li>
	{% else %}
		<li>Pas encore de Groupe-QCM</li>
	{% endfor %}
	</ul>
{% endblock %}